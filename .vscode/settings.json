{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.fixAll.eslint": "always",
            "source.organizeImports": "always"
        }
    },
    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.fixAll.eslint": "always",
            "source.organizeImports": "always"
        }
    }
}
